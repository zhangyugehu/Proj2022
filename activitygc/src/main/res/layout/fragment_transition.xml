<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransitionActivity">

    <TextView
        android:id="@+id/label_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        tools:text="Message"
        android:textSize="30sp"
        android:textColor="#eee" />

    <Button
        android:id="@+id/btn_single_instance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="SingleInstance" />

    <Button
        android:id="@+id/btn_mem_alloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_single_instance"
        android:layout_centerHorizontal="true"
        android:text="MemAlloc" />

    <Button
        android:id="@+id/btn_self"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_mem_alloc"
        android:layout_centerHorizontal="true"
        android:text="self" />

</RelativeLayout>