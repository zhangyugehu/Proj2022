<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="14dp"
    android:paddingVertical="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.tsh.chart.pie.LabelPieView
        android:id="@+id/pie_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <com.google.android.flexbox.FlexboxLayout
        app:layout_constraintStart_toEndOf="@id/pie_view"
        app:layout_constraintTop_toTopOf="@id/pie_view"
        app:layout_constraintBottom_toBottomOf="@id/pie_view"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="14dp"
        android:layout_width="0dp"
        app:justifyContent="space_between"
        app:flexWrap="wrap"
        app:alignContent="space_between"
        android:layout_height="wrap_content" >

        <com.tsh.chart.PointTextView
            android:id="@+id/tv_0"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="现金 13.09%"
            app:pointColor="@color/purple_200"
            android:layout_height="wrap_content" />

        <com.tsh.chart.PointTextView
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="投顾 13.09%"
            app:pointColor="@color/purple_200"
            android:layout_height="wrap_content" />

        <com.tsh.chart.PointTextView
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="自选 13.09%"
            app:pointColor="@color/purple_200"
            android:layout_height="wrap_content" />

        <com.tsh.chart.PointTextView
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="数字货币fffffff ffff13.09%"
            app:pointColor="@color/purple_200"
            android:layout_height="wrap_content" />

    </com.google.android.flexbox.FlexboxLayout>


</androidx.constraintlayout.widget.ConstraintLayout>